{
  "compilerOptions": {
    "outDir": "./bin/lib",
    "noImplicitAny": true,
    "sourceMap": false,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "esnext",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/test_*.ts"
  ]
}
